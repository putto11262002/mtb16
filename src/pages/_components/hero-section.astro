---
import { Image } from "astro:assets";
import HeroText from "./hero-text";

interface Props {
  heroImage: string;
  heroTitle?: string;
}

const { heroImage, heroTitle } = Astro.props;
---

<section class="relative min-h-screen flex flex-col items-center pt-24 pb-44">
  <Image
    src={heroImage}
    alt="มณฑลทหารบกที่ ๑๖"
    loading="eager"
    width={1920}
    height={1080}
    class="absolute inset-0 object-cover h-full w-full z-0"
  />
  <div class="absolute inset-0 bg-black/60 z-10"></div>
  <HeroText heroTitle={heroTitle} client:visible />
</section>
