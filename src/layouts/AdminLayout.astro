---
import BaseLayout from "./BaseLayout.astro"
import {SidebarLayout} from "@/components/islands/client/admin/Layout.tsx"

if (!Astro.locals.session)  {
  return Astro.redirect("/signin")
  }
  const user = Astro.locals.user!
---
<BaseLayout>
  <slot name="head" />
  <Fragment slot="body">
  <SidebarLayout user={user} client:load>
  <slot name="body"/>
  </SidebarLayout>
  </Fragment>
</BaseLayout>
